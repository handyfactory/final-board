<h1>게시판입니다</h1>
<a href = "/posts/new">새 글쓰기</a>


<table>
    <tr>
        <th>ID</th>
        <th>제목</th>
        <th>내용</th>
        <th>시간</th>
    </tr>

    <%@posts.each do |p|%>
        <tr>
            <td><%=p.id%></td>
            <td><a href="/posts/show/<%=p.id%>"><%=p.title%></a></td>
            <td><%=p.content%></td>
            <td><%=p.created_at%></td>
        </tr>
    <%end%>
</table>
